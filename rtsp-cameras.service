[Unit]
Description=라즈베리파이 RTSP 웹캠 시스템
After=network.target
Wants=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/rsp-rtsp-cam
ExecStart=/usr/bin/python3 /home/pi/rsp-rtsp-cam/main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# 환경 변수 설정
Environment=PYTHONPATH=/home/pi/rsp-rtsp-cam
Environment=DISPLAY=:0

# 보안 설정
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/home/pi/rsp-rtsp-cam

# 리소스 제한
LimitNOFILE=65536
MemoryMax=512M

[Install]
WantedBy=multi-user.target
